@page "{id:int}"
@model ChildCareAdmin.Pages.Users.EditModel
@{
    ViewData["Title"] = "Edit User";
}

<h2>Edit User</h2>

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label">Full Name</label>
        <input asp-for="Input.FullName" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Input.Email" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Phone</label>
        <input asp-for="Input.Phone" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Role</label>
        <select asp-for="Input.Role" class="form-select">
            <option value="Parent" selected="@("Parent" == Model.Input.Role)">Parent</option>
            <option value="Staff" selected="@("Staff" == Model.Input.Role)">Staff</option>
            <option value="Admin" selected="@("Admin" == Model.Input.Role)">Admin</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Image</label>
        <input type="file" asp-for="ImageFile" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.CurrentImageUrl))
        {
            <img src="@Model.CurrentImageUrl" width="80" height="80" class="mt-2" style="border-radius:50%" />
        }
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Back</a>
</form>
