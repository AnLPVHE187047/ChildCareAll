@page "{id:int}"
@model ChildCareAdmin.Pages.Users.EditModel
@{
    ViewData["Title"] = "Edit User";
}

<h2>Edit User</h2>

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label">Full Name</label>
        <input asp-for="Input.FullName" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Input.Email" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Phone</label>
        <input asp-for="Input.Phone" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Role</label>
        <select asp-for="Input.Role" class="form-select">
            <option value="Parent">Parent</option>
            <option value="Staff">Staff</option>
            <option value="Admin">Admin</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Status</label>
        <select asp-for="Input.IsActive" class="form-select">
            <option value="true" selected="@(Model.Input.IsActive ? "selected" : null)">Active</option>
            <option value="false" selected="@(!Model.Input.IsActive ? "selected" : null)">Inactive</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Profile Image</label>
        <input type="file" asp-for="ImageFile" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.CurrentImageUrl))
        {
            <img src="@Model.CurrentImageUrl" width="100" height="100" class="mt-2 rounded-circle border" />
        }
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Back</a>
</form>
