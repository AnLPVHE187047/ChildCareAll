@page
@model ChildCareAdmin.Pages.Services.CreateModel
<h2>Create New Service</h2>

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label>Name</label>
        <input asp-for="Service.Name" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Description</label>
        <textarea asp-for="Service.Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label>Price</label>
        <input asp-for="Service.Price" type="number" step="0.01" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Duration</label>
        <input asp-for="Service.DurationMinutes" type="number" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Image</label>
        <input asp-for="Service.ImageFile" type="file" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
