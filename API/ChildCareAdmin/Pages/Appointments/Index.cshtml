@page
@model ChildCareAdmin.Pages.Appointments.IndexModel

<h2>Appointments Management</h2>
<form method="get" class="row g-2 mb-3">
    <div class="col">
        <input type="text" name="SearchUser" class="form-control" placeholder="Search User..." value="@Model.SearchUser">
    </div>
    <div class="col">
        <select name="month" class="form-select">
            <option value="">All Months</option>
            @for (int m = 1; m <= 12; m++)
            {
                @if (Request.Query["month"] == m.ToString())
                {
                    <option value="@m" selected>@m</option>
                }
                else
                {
                    <option value="@m">@m</option>
                }

            }
        </select>
    </div>

    <div class="col">
        <select name="status" class="form-select">
            <option value="">All Status</option>
            @foreach (var s in Model.StatusList)
            {
                @if (Request.Query["status"] == s.ToString())
                {
                    <option value="@s" selected>@s</option>
                }
                else
                {
                    <option value="@s">@s</option>
                }

            }
        </select>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary">Filter</button>
    </div>
</form>

<table class="table table-hover">
    <thead>
        <tr>
            <th>User</th>
            <th>Service</th>
            <th>Staff Name</th>
            <th>Date</th>
            <th>Time</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model.Appointments)
        {
            <tr>
                <td>@a.UserName</td>
                <td>@a.ServiceName</td>
                <td>@a.StaffName</td>
                <td>@a.AppointmentDate.ToShortDateString()</td>
                <td>@a.AppointmentTime</td>
                <td>@a.Status</td>
                <td>
                    <form method="post" asp-page-handler="UpdateStatus" asp-route-id="@a.AppointmentID">
                        <select name="status" class="form-select form-select-sm">
                            @foreach (var s in Model.StatusList)
                            {
                                if (s == a.Status)
                                {
                                    <option value="@s" selected>@s</option>
                                }
                                else
                                {
                                    <option value="@s">@s</option>
                                }
                            }

                        </select>
                        <button type="submit" class="btn btn-primary btn-sm mt-1">Update</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
